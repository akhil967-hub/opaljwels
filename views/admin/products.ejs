<%- include('../partials/admin/header.ejs') %>

<!-- Add these links to your head section -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>

<style>
  #productTable tbody tr:hover {
    background-color: #f97a7a; /* Change this to the color you prefer */
  }
</style>

  <div class="clearfix"></div>

  
  <div class="content-wrapper">
    <div class="container-fluid">
        
        <div style="margin-top: 20px;">
            <button type="button" class="btn btn-outline-info"><a href="/admin/products/add">ADD PRODUCTS</a></button>
        </div>
        
      <div class="row" >
        <div class="col-lg-12">
          <div class="card" style="margin-top: 20px;">
            <div class="card-body">
              <h5 class="card-title">PRODUCT DETAILS</h5>
              <div class="table-responsive">              
                <table style="color: black; background-color: darkturquoise;" id="productTable"  >              
                     <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Name</th>
                      <th scope="col">Price</th>
                      <th scope="col">Category</th>
                      <th scope="col">Image</th>
                      <th scope="col">Stock</th>
                      <th scope="col">Status</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (message.length> 0) { %>
                      <% for (let i = message.length-1; i >= 0; i--) { %>
                        <tr>
                          <th scope="row">
                            <%= message.length-i %>
                          </th>
                          <td>
                            <%= message[i].name %>
                          </td>
                          <td>
                            <%= message[i].price %>
                          </td>
                          <td>
                            <%= message[i].category %>
                          </td>
                          <td>
                            <img style="width: 80px; height: 80px;" src="/productimages/<%= message[i].image[0] %>" alt="test">
                            <img style="width: 80px; height: 80px;" src="/productimages/<%= message[i].image[1] %>" alt="test">
                            <img style="width: 80px; height: 80px;" src="/productimages/<%= message[i].image[2] %>" alt="test">


                        </td>
                        <td>
                          <%= message[i].stock %>
                        </td>
                        <td>
                          <%= message[i].status %>
                          
                        </td>
                        <td>
                          <button type="button" class="btn btn-outline-dark">
                            <a href="/admin/products/delete?id=<%= message[i]._id%>" style="color: red;">Delete</a>
                          </button>
                            <button type="button" class="btn btn-outline-dark">
                              <a href="/admin/products/edit?id=<%= message[i]._id%>" style="color: darkgreen;">Edit</a></button>
                        </td>
                        


                        </tr>
                        <% } %>
                          <% } else { %>
                            <tr>
                              <td colspan="3">Products not found</td>
                            </tr>
                            <% } %>
                  </tbody>


                </table>

                <script>
                  $(document).ready(function() {
                    $('#productTable').DataTable({
                      "bInfo": false  // Disable the display of information about the table
                    });
                  });
                </script>
                
                
              </div>
            </div>
          </div>
        </div>

      </div><!--End Row-->



      